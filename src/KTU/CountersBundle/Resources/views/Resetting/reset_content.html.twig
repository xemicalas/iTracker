{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST"
      class="fos_user_resetting_reset form-horizontal" role="form">

    <div class="form-group">
        {{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}
        ) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans }}
            ) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}
        ) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans }}
            ) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-default"/>
        </div>
    </div>
</form>
