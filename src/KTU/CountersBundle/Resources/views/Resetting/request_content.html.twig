{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST"
      class="form-horizontal fos_user_resetting_request" role="form">
    {% if invalid_username is defined %}
        <div class="alert alert-warning">
            {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
        </div>
    {% endif %}
    <div class="form-group">
        <label for="username" class="col-sm-3">{{ 'resetting.request.username'|trans }}</label>

        <div class="col-sm-4">
            <input type="text" id="username" class="form-control" name="username" required="required"
                   placeholder="{{ 'resetting.request.username'|trans }}"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <input type="submit" class="btn btn-default" value="{{ 'resetting.request.submit'|trans }}"/>
        </div>
    </div>
</form>
