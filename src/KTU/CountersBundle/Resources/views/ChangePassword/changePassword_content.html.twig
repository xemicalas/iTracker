{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST"
      class="form-horizontal fos_user_change_password">

    {% if not form.vars.valid %}
        <div class="alert alert-warning">
            {{ form_errors(form) }}
            {{ form_errors(form.current_password) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    {% endif %}

    <div class="form-group">
        {{ form_label(form.current_password, 'form.current_password'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}
        ) }}
        <div class="col-sm-4">
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.first, 'form.new_password'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}
        ) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'form.new_password'|trans} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}
        ) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans} }) }}
        </div>
    </div>

    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-default"/>
        </div>
    </div>
</form>
