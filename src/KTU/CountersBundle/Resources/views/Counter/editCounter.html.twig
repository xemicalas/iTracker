{% extends 'KTUCountersBundle::base.html.twig' %}
{% trans_default_domain 'KTUCountersBundle' %}
{% form_theme form 'KTUCountersBundle:Form:form.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'counter.edit.title'|trans }}
{% endblock %}

{% block heading %}
    <div class="panel-heading"><h3>{{ 'counter.edit.header'|trans }} ({{ counter.name }})</h3></div>
{% endblock %}

{% block body %}
    <div class="well">
        <a href="{{ path('ktu_counters_edit_counter_colors', {'id': counter.id}) }}">
            {{ 'counter.edit.change_appearance'|trans }}</a>
    </div>
    {% if isEdited %}
        <div class="alert alert-success">
            {{ 'counter.edit.alerts.edited'|trans }}
        </div>
    {% endif %}
        {{ form_start(form, {'attr': {'role': 'form', 'class': 'form-horizontal' }}) }}
        {% if not form.vars.valid %}
            <div class="alert alert-warning">
                {{ form_errors(form) }}
                {{ form_errors(form.cat) }}
                {{ form_errors(form.name) }}
                {{ form_errors(form.url) }}
                {{ form_errors(form.counterDesc) }}
            </div>
        {% endif %}
    {{ form(form) }}
    {{ form_end(form) }}
{% endblock %}