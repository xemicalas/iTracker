{% trans_default_domain 'FOSUserBundle' %}
<div class="well">
    <a href="{{ path('fos_user_change_password') }}">Change password</a>
</div>
<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST"
      class="form-horizontal fos_user_profile_edit">

    {% if not form.vars.valid %}
        <div class="alert alert-warning">
            {{ form_errors(form) }}
            {{ form_errors(form.email) }}
            {{ form_errors(form.current_password) }}
        </div>
    {% endif %}

    <div class="form-group">
        {{ form_label(form.email, 'form.email'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.current_password, 'form.current_password'|trans, {'label_attr': {'class': 'col-sm-3 control-label' }}
        ) }}
        <div class="col-sm-4">
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans} }) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-default"/>
        </div>
    </div>
</form>
