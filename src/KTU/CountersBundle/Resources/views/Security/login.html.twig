{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{ parent() }} - {{ 'layout.login'|trans }}
{% endblock %}

{% block heading %}
    <div class="panel-heading"><h3>{{ 'layout.login'|trans }}</h3></div>
{% endblock %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-warning">{{ error|trans }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <label for="username" class="col-sm-3 control-label">{{ 'security.login.username'|trans }}</label>

            <div class="col-sm-4">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       class="form-control" placeholder="{{ 'security.login.username'|trans }}" autofocus/>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">{{ 'security.login.password'|trans }}</label>

            <div class="col-sm-4">
                <input type="password" id="password" name="_password" required="required" class="form-control"
                       placeholder="{{ 'security.login.password'|trans }}"/>
            </div>
        </div>

        <div class="form-group form-text">
            <div class="col-sm-offset-3 col-sm-4">
                <a href="{{ path("fos_user_resetting_request") }}">{{ 'resetting.forgot'|trans }}</a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-4">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-4">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                       class="btn btn-default"/>
            </div>
        </div>
    </form>
{% endblock fos_user_content %}