{% extends 'KTUAdminBundle::base.html.twig' %}

{% form_theme edit_form 'KTUCountersBundle:Form:form.html.twig' %}

{% block heading %}
    <div class="panel-heading"><h3>Counters edit</h3></div>
{% endblock %}

{% block body -%}

    <div class="well">
        <ul class="stats">
            <li><a href="{{ path('counters') }}">Back to the list</a></li>
            <li class="list-form">{{ form(delete_form) }}</li>
        </ul>
    </div>
    <div class="line"></div>
    {{ form_start(edit_form, {'attr': {'role': 'form', 'class': 'form-horizontal' }}) }}
    {% if not edit_form.vars.valid %}
        <div class="alert alert-warning">
            {{ form_errors(edit_form) }}
            {% for child in edit_form %}
                {{ form_errors(child) }}
            {% endfor %}
        </div>
    {% endif %}
    {{ form(edit_form) }}
    {{ form_end(edit_form) }}

{% endblock %}
