{% extends 'KTUAdminBundle::base.html.twig' %}

{% block heading %}
    <div class="panel-heading"><h3>Categories list</h3></div>
{% endblock %}

{% block body -%}

    <div class="well">
        <a href="{{ path('categories_new') }}">Create a new category</a>
    </div>
    <div class="line"></div>
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th style="width:50px"></th>
                <th style="width:50px"></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.category }}</a></td>
                <td>
                    <a href="{{ path('categories_show', { 'id': entity.id }) }}">
                        <span class="glyphicon glyphicon-file tooltip-text" data-toggle="tooltip"
                              data-placement="right" title="Show"></span></a></a>
                </td>
                <td><a href="{{ path('categories_edit', { 'id': entity.id }) }}">
                        <span class="glyphicon glyphicon-edit tooltip-text" data-toggle="tooltip"
                              data-placement="right" title="Edit"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
