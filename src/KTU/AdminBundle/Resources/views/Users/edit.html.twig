{% extends 'KTUAdminBundle::base.html.twig' %}

{% form_theme edit_form 'KTUCountersBundle:Form:fields.html.twig' %}

{% block heading %}
    <div class="panel-heading"><h3>User edit ({{ entity.username }})</h3></div>
{% endblock %}

{% block body -%}
    <div class="well">
        <ul class="stats">
            <li><a href="{{ path('users') }}">Back to the list</a></li>
            <li class="list-form">{{ form(delete_form) }}</li>
        </ul>
    </div>
    <div class="line"></div>
    {{ form_start(edit_form, {'attr': {'role': 'form', 'class': 'form-horizontal' }}) }}
    {% if not edit_form.vars.valid %}
        <div class="alert alert-warning">
            {{ form_errors(edit_form) }}
            {% for child in edit_form %}
                {{ form_errors(child) }}
            {% endfor %}
        </div>
    {% endif %}

    {{ form_row(edit_form.username) }}
    {{ form_row(edit_form.email) }}
    {{ form_row(edit_form.enabled) }}
    {{ form_row(edit_form.locked) }}
    {{ form_rest(edit_form) }}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <input type="submit" value="Update" class="btn btn-default"/>
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
